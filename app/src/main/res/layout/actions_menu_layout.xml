<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/mapView"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="35dp"
    android:orientation="vertical"
    android:visibility="invisible"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancelImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:src="@drawable/cancel" />

        <ImageView
            android:id="@+id/goViaWalkingImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:src="@drawable/directions_walk_24" />

        <ImageView
            android:id="@+id/goViaDrivingImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:src="@drawable/directions_car_24" />

        <ImageView
            android:id="@+id/goViaBicycleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/directions_bike_24" />

    </LinearLayout>

    <Button
        android:id="@+id/startNavigationButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rect"
        android:textColor="?colorAccent"
        android:visibility="invisible"
        android:text="@string/start_navigation"
        tools:visibility="visible"
        />

</LinearLayout>